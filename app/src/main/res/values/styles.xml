<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarSky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#406092</item>
        <item name="colorOnSecondary">#C0DDFA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#7200F1</item>
        <item name="colorOnPrimarySurface">#48689b</item>
        <item name="PicBackground">@drawable/stars_repeat</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
        <item name="cardViewStyle">@style/CardStyle</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
    </style>

    <style name="Theme.Snowflakes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A9C8F6</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C0DDFA</item>
        <item name="colorOnSecondary">#406092</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#B578FA</item>
        <item name="colorOnPrimarySurface">#2A75ED</item>
        <item name="PicBackground">@drawable/snowflakes_repeat</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
        <item name="cardViewStyle">@style/CardStyle</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">@dimen/half_indent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>

        <item name="counterTextColor">?attr/colorOnSecondary</item>
        <item name="helperTextTextColor">?attr/colorOnSecondary</item>
        <item name="hintTextColor">?attr/colorOnSecondary</item>
        <item name="placeholderTextColor">?attr/colorOnSecondary</item>

        <item name="counterTextAppearance">@style/TextInputLayoutStyle.Text</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutStyle.Text</item>
        <item name="hintTextAppearance">@style/TextInputLayoutStyle.Text</item>
        <item name="placeholderTextAppearance">@style/TextInputLayoutStyle.Text</item>
    </style>

    <style name="TextInputLayoutStyle.Text">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/secondary_field</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginStart">@dimen/half_indent</item>
        <item name="android:layout_marginEnd">@dimen/half_indent</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="SnackbarTextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SnackbarButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="checkedIconTint">?attr/colorOnSecondary</item>
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="BottomNavStyle" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/BottomTextStyle</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="BottomTextStyle">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/full_indent</item>
        <item name="cardElevation">@dimen/half_indent</item>
    </style>

    <style name="TabStyle" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatusLabel">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:layout_marginEnd">@dimen/full_indent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ExpandedTitleTextStyle">
        <item name="android:shadowRadius">7</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/spacequest</item>
    </style>

    <style name="CollapsedTitleTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/spacequest</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SelectTextStyle">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/jlsdatagothiccnc</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>